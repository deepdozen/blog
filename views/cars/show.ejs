<% include ../partials/header %>

    <div class="row">
        <div class="col-md-3">
            <p class="lead">BMW blog</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
            <div id="map"></div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src=" <%= car.image %>">
                <div class="caption-full">
                    <h4 class="pull-right">$<%= car.price %></h4>
                    <h4><a><%=car.name%></a></h4>
                    <p><%= car.description %></p>
                    <p><em>Submitted by: <strong><%= car.author.username %></strong>     <%= moment(car.createdAt).fromNow() %></em></p>
                    <% if(currentUser && car.author.id.equals(currentUser._id) || currentUser && currentUser.isAdmin){ %>
                        <a class="btn btn-xs btn-warning" href="/cars/<%= car._id %>/edit">Edit</a>
                        <form class="delete-form" action="/cars/<%= car._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-xs btn-danger">Delete</button>
                        </form>
                    <% } %>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/cars/<%= car._id %>/comments/new">Add New Comment</a>
                </div>
                <hr>
                <% car.comments.forEach(comment=>{ %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author.username %></strong>
                            <span class="pull-right">
                                <%= moment(comment.createdAt).fromNow() %>
                            </span>
                            <p>
                                <%= comment.text %>
                            </p>
                        <% if(currentUser && comment.author.id.equals(currentUser._id) || currentUser && currentUser.isAdmin){ %>
                        <a class="btn btn-xs btn-warning" 
                        href="/cars/<%= car._id %>/comments/<%=comment._id %>/edit">Edit</a>
                        <form class="delete-form" action="/cars/<%= car._id %>/comments/<%=comment._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-xs btn-danger">Delete</button>
                        </form>
                        <% } %>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>

<script>
  function initMap() {
    var lat = <%= car.lat %>;
    var lng = <%= car.lng %>;
    var center = {lat: lat, lng: lng };
    var map = new google.maps.Map(document.getElementById('map'), {
        zoom: 8,
        center: center,
        scrollwheel: false
    });
    var contentString = `
      <strong><%= car.name %><br />
      <%= car.location %></strong>
      <p><%= car.description %></p>
    `
    var infowindow = new google.maps.InfoWindow({
      content: contentString
    });
    var marker = new google.maps.Marker({
        position: center,
        map: map
    });
    marker.addListener('click', function() {
      infowindow.open(map, marker);
    });
  }
</script>
<script async defer src="https://maps.googleapis.com/maps/api/js?key=API_KEY_01&callback=initMap"></script>    

<% include ../partials/footer %>