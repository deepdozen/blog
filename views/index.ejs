<% include partials/header %>
 <div clas="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to BMW blog!</h1>
            <p>You can post here photos of BMW</p>
            <p>
                <a class="btn btn-primary btn-large" href="/cars/new">Add new photo</a>
            </p>
        </div>
    </header>

    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% cars.forEach(car=>{ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= car.image %>">
                    <div class="caption">
                        <h4><%= car.name %></h4>
                    </div>
                <p>
                    <a href="/cars/<%= car._id %>" class="btn btn-primary">More Info</a>
                </p>
                </div>
            </div>
        <%}); %>
    </div>
 </div>

<% include partials/footer %>